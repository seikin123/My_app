<h2>User Edit</h2>
<%= form_with model:@user, local:true do |f| %>
<label>name</label>
<%= f.text_field :name %>
<label>Image</label>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"form-control-file user_image" %>

<label>introduction</label>
<%= f.text_area :profile, class:"form-control book_body" %>
<%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>